@startuml
    
    entity Employee{
        {static}num_employee
        first_name
        last_name
        birth_date
        address
        phone_number
        email
    }
    entity Customer{
        {static}num_customer
        first_name
        last_name
        birth_date
        address
        phone_number
        email
    }
    entity Article{
        {static}id_article
        wording
        price
        VAT
    }
    entity Aisle{
        {static}num_aisle
        wording
        nb_shelves
    }
    entity Bill{
        {static}id_bill
        date
        isDiscountBeforeDeadline
        discountCoupon[0..1]
        possibleRemarks[0..1]
    }
    
    
    Article }o--|| Aisle : Storage
    Bill }o--o{ Article : Listing
    Employee ||--o{ Bill : Creation
    Customer ||--o{ Bill : Reception
    Employee }|--o{ Aisle : Restocking

@enduml